<%= render 'components/containers/crud_container' do %>
  <h3>Profile</h3>
  <hr>
  <div class="row">
    <div class="col-sm-8">
      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
      <p>
        <strong>Name:</strong>
        <%= @user.name %>
      </p>
      <p>
        <strong>Address:</strong>
        <%= @user.address %>
      </p>
      <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-success btn-sm mr-2' %> 
      <%= link_to 'Update password', '/profile/change_password', class: 'btn btn-danger btn-sm' %>
    </div>
    <div class="col-sm-4">
      <% if @user.image.attached? %>
        <%= image_tag @user.image, class: 'w-100' %>
      <% end %>
    </div>
  </div>
<% end %>
