    <div class="col-sm-6 py-5 px-5">
      <div class="login-container px-4 py-5 bg-white rounded shadow">
        <img src="/images/logo.png" class="logo"/>
        <h4 class="text-center mt-3">Log in</h4><hr/>
        
        <% if alert.present? %>
          <p class="text-danger"><%= alert %></p>
        <% end %>
        
        <% if notice.present? %>
          <p class="text-success"><%= notice %></p>
        <% end %>
        
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: 'btn btn-primary rounded-pill px-5 d-block mx-auto' %>
          </div>
        <% end %>
      </div>
