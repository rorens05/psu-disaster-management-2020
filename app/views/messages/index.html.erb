<%= render 'components/containers/crud_container' do %>
  <h1>Messages</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Recipient</th>
        <th>Content</th>
        <th>Student</th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= link_to message.recipient, message, class: 'text-reset d-block text-decoration-none' %></td>
          <td><%= link_to message.message_type, message, class: 'text-reset d-block text-decoration-none' %></td>
          <td><%= link_to message.student.name, message, class: 'text-reset d-block text-decoration-none' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
<% end %>