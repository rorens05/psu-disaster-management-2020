<div class="navbar-container">
  <div class="custom-navbar">
    <div class="d-flex align-items-center">
      <button class="btn btn-dark"><i class="fas fa-bars"></i></button>
      <h3 class="my-0 ml-3 text-white"><%= controller_name.titleize %></h3>
    </div>
    <div class="d-flex align-items-center">
      <h5 class="my-0 mr-3 text-white"><%= current_user.name %></h5>
      <% if current_user.image.attached? %>
        <%= image_tag current_user.image, class: 'nav-logo' %>
      <% end %>
      
    </div>
  </div>
</div>